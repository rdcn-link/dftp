<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- DftpServerConfig Bean -->
    <bean class="link.rdcn.server.DftpServerConfigBean">
        <property name="protocolScheme" value="dacp"/>
        <property name="host" value="${proxy.host.position}"/>
        <property name="port" value="${proxy.host.port}"/>
        <property name="modules">
            <list>
                <bean class="link.rdcn.dacp.proxy.ProxyModule">
                    <property name="targetServerUrl" value="${proxy.target.url}"/>
                </bean>
            </list>
        </property>
    </bean>
    <!-- Property placeholder 配置 -->
    <bean class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>file:${configDir}/proxy.conf</value>
            </list>
        </property>
        <property name="ignoreUnresolvablePlaceholders" value="true"/>
    </bean>
</beans>
